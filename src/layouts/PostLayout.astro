---
const { frontmatter } = Astro.props;
const postDate = String(frontmatter?.date ?? "").slice(0, 10);
const category = frontmatter?.category ?? "기타";
const tags = Array.isArray(frontmatter?.tags) ? frontmatter.tags : [];
---

<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title} | siruharu</title>
    <style>
      :root {
        --bg-top: #f5f2e8;
        --bg-bottom: #fffdf9;
        --ink: #1f2a37;
        --ink-muted: #5d6774;
        --line: #dbd5ca;
        --accent: #0f7b6c;
        color-scheme: light;
      }

      body {
        margin: 0;
        font-family: "Iowan Old Style", "Palatino Linotype", "Book Antiqua", Palatino, serif;
        line-height: 1.6;
        color: var(--ink);
        background:
          radial-gradient(circle at 12% 2%, #fff3d7 0%, transparent 28%),
          radial-gradient(circle at 88% 8%, #e8f8f3 0%, transparent 30%),
          linear-gradient(180deg, var(--bg-top) 0%, var(--bg-bottom) 46%);
      }

      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 28px 20px 64px;
        min-height: 100vh;
      }

      .layout {
        margin-top: 10px;
        display: grid;
        grid-template-columns: 260px minmax(0, 1fr);
        gap: 16px;
      }

      .sidebar {
        position: sticky;
        top: 16px;
        align-self: start;
        border: 1px solid var(--line);
        border-radius: 14px;
        background: #fffefb;
        padding: 14px;
        box-shadow: 0 10px 20px rgba(56, 43, 14, 0.06);
      }

      .section + .section {
        margin-top: 14px;
      }

      .section h2 {
        margin: 0 0 8px;
        font-size: 0.84rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--accent);
      }

      .cat {
        display: grid;
        grid-template-columns: 34px 1fr;
        gap: 8px;
        align-items: center;
        border: 1px solid var(--line);
        border-radius: 10px;
        padding: 7px;
      }

      .cat + .cat {
        margin-top: 7px;
      }

      .cat img {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        object-fit: cover;
        border: 1px solid #d6cfbf;
      }

      .cat-name {
        font-size: 0.9rem;
        font-weight: 700;
      }

      .meta-list {
        margin: 0;
        padding: 0;
        list-style: none;
        display: grid;
        gap: 6px;
      }

      .chip {
        display: inline-flex;
        align-items: center;
        border: 1px solid var(--line);
        border-radius: 999px;
        padding: 4px 8px;
        font-size: 0.78rem;
        color: #526072;
        margin-right: 4px;
      }

      a {
        color: var(--accent);
        font-weight: 700;
      }

      .meta {
        color: var(--ink-muted);
        font-size: 0.95rem;
      }

      h1 {
        margin-bottom: 8px;
        line-height: 1.2;
      }

      article {
        background: #fffefb;
        border: 1px solid var(--line);
        border-radius: 14px;
        padding: 24px 24px 28px;
        min-height: calc(100vh - 140px);
        box-shadow: 0 14px 32px rgba(57, 47, 20, 0.07);
        animation: rise 0.6s ease both;
      }

      :global(article p) {
        color: var(--ink);
      }

      :global(article h2),
      :global(article h3) {
        line-height: 1.3;
      }

      @media (max-width: 900px) {
        .layout {
          grid-template-columns: 1fr;
        }

        .sidebar {
          position: static;
        }

        article {
          min-height: 62vh;
        }
      }

      @keyframes rise {
        from {
          opacity: 0;
          transform: translateY(8px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <main class="container">
      <a href="/">← 홈으로</a>
      <section class="layout">
        <aside class="sidebar">
          <section class="section">
            <h2>Cats</h2>
            <div class="cat">
              <img src="/siru.png" alt="Siru" />
              <span class="cat-name">Siru</span>
            </div>
            <div class="cat">
              <img src="/haru.png" alt="Haru" />
              <span class="cat-name">Haru</span>
            </div>
          </section>
          <section class="section">
            <h2>Post</h2>
            <ul class="meta-list">
              <li>카테고리: <span class="chip">{category}</span></li>
              <li>
                태그:
                {tags.length > 0 ? tags.map((tag) => <span class="chip">#{tag}</span>) : <span class="chip">없음</span>}
              </li>
            </ul>
          </section>
          <section class="section">
            <h2>Write</h2>
            <a href="/admin">관리자에서 글쓰기</a>
          </section>
        </aside>

        <article>
          <h1>{frontmatter.title}</h1>
          <p class="meta">{postDate}</p>
          <slot />
        </article>
      </section>
    </main>
  </body>
</html>
